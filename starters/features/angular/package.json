{
  "description": "Use Angular components into your Qwik app",
  "dependencies": {
    "@angular/common": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/material": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "0.2.0-beta.10",
    "@builder.io/qwik-angular": "0.1.0",
    "@angular-devkit/build-angular": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/compiler-cli": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-server": "^16.0.0",
    "@ngtools/webpack": "^16.0.0"
  },
  "__qwik__": {
    "displayName": "Framework: Angular",
    "priority": -25,
    "postinstall": "node node_modules/@builder.io/qwik-angular/lib/postinstall.mjs",
    "docs": [
      "https://qwik.builder.io/integrations/integration/angular/TODO"
    ],
    "nextSteps": {
      "title": "New folders created!",
      "lines": [
        " - /src/routes/angular: New public route showcasing angular integration",
        " - /src/integrations/angular: Here's where the angular component lives"
      ]
    },
    "viteConfig": {
      "imports": [
        {
          "namedImports": [
            "angular"
          ],
          "importPath": "@builder.io/qwik-angular/vite"
        }
      ],
      "vitePlugins": [
        "angular({ tsconfig: './tsconfig.json', componentsDir: 'integrations/angular/components', bundleSassFilesInDevMode: { paths: ['src/theme.scss'], compileOptions: { loadPaths: ['node_modules'] } } })"
      ]
    }
  }
}
